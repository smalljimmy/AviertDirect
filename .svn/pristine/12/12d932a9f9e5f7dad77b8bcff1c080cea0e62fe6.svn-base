 /* tooltip styling. by default the element to be styled is .tooltip  */

.tooltip {
         display:none;
         background-color: rgba(113,103,94, 0.9);
         box-shadow: 0px 0px 6px rgb(113,103,94);
         border: 1px solid rgb(113,103,94);
         margin-top: 0;
         font: 12px/18px 'OpenSansSemibold';
         color: rgb(241,240,239); 
         height: auto;
         width:220px;
         padding: 20px 10px 20px 20px;
         z-index: 999;
         }
.tooltip span { font: 12px/18px 'OpenSansBold'; }